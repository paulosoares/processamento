<?xml version="1.0" encoding="ISO-8859-1"?>
<ui:composition xmlns="http://www.w3.org/1999/xhtml"
	xmlns:s="http://jboss.com/products/seam/taglib"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:rich="http://richfaces.org/rich"
	xmlns:p="http://primefaces.prime.com.tr/ui"
	xmlns:a="http://richfaces.org/a4j"
	xmlns:c="http://java.sun.com/jstl/core"
	xmlns:stf="http://www.stf.jus.br/custom-components">

	<rich:modalPanel id="panelListasDoTexto" width="300" height="300">
		<f:facet name="header">
			<h:outputText value="Listas de Textos associadas ao texto " />
			<h:outputText value="#{textoFacesBean.texto.identificacao}" />
		</f:facet>
		
		<div style="height: 200px; overflow: auto;">
			<rich:dataTable 
				id="tbListasTexto" var="_listaTexto" value="#{textoFacesBean.listasTexto}"
				rowClasses="dr-table-row-odd, dr-table-row-even"
				styleClass="simple-data-table" >
				<rich:column>
					<f:facet name="header">
						<h:outputText value="Lista de Texto" />
					</f:facet>
					<h:outputText value="#{_listaTexto.nome}" />
				</rich:column>
			</rich:dataTable>
		</div>
		
		<div>Total de registros: #{textoFacesBean.listasTexto.size()}</div>
		
		<div style="padding-top: 5px; text-align: right">
			<a:commandButton value="Fechar" style="margin-right: 0px !important;"
			onclick="#{rich:component('panelListasDoTexto')}.hide()"
			eventsQueue="ajaxQueue" ignoreDupResponses="true"/>
		</div>

	</rich:modalPanel>
</ui:composition>